<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.julieannmoore.retailprofitcalculator.ProductListActivity">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">
        <include layout="@layout/layout_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/product_list"
        android:textAlignment="center"
        android:textSize="32sp"
        android:padding="8dp"
        android:background="@color/secondColorLight"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:id="@+id/cardView">
        <include
            layout="@layout/layout_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="16dp"
        android:background="@color/secondColorAccent">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/add_fab"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginBottom="24dp"
            android:layout_marginRight="24dp"
            android:layout_margin="5dp"
            android:background="@drawable/fab"
            android:clickable="true"
            android:src="@drawable/ic_add_black_24dp"
            />
    </RelativeLayout>

</LinearLayout>



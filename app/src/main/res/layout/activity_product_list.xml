<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/mybutton"
    tools:context="com.example.julieannmoore.retailprofitcalculator.AddProductActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/product_list"
        android:textAlignment="center"
        android:textSize="28sp"
        android:padding="8dp"
        android:textColor="#FFFFFF"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">
        <include layout="@layout/layout_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/product_list_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:paddingEnd="60dp"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:paddingStart="60dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="#FFFFFF"
        android:text="@string/empty_product_list"
        android:textAlignment="center"
        android:textColor="@color/secondColorDark"
        android:textSize="24sp" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="5dp"
        android:id="@+id/cardView">
        <include
            layout="@layout/layout_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/bn_add_product"
        android:layout_width="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/gray_button"
        android:padding="8dp"
        android:text="@string/add_product"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

</LinearLayout>



